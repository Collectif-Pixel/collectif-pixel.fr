---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Blog - COLLECTIF PIXEL" description="Actualités, réflexions sur la tech et coulisses des projets du COLLECTIF PIXEL.">
  <Header />

  <main class="pt-24 pb-16 relative">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 -right-32 w-64 h-64 bg-pixel-accent/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/3 -left-32 w-64 h-64 bg-pixel-accent-light/5 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-6xl mx-auto px-6 relative z-10">
      <div class="text-center mb-16 reveal">
        <a href="/" class="inline-flex items-center gap-2 text-pixel-text-muted hover:text-pixel-accent transition-colors text-sm mb-8">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour à l'accueil
        </a>
        <span class="block text-pixel-accent font-semibold text-sm tracking-wider uppercase">Actualités</span>
        <h1 class="text-4xl md:text-5xl font-bold mt-4 mb-6">Blog</h1>
        <p class="text-pixel-text-muted text-lg max-w-2xl mx-auto">
          Réflexions sur la tech, coulisses de nos projets et actualités du collectif.
        </p>
        <a
          href="/rss.xml"
          target="_blank"
          class="inline-flex items-center gap-2 mt-6 px-4 py-2 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 transition-all text-sm"
        >
          <svg class="w-4 h-4 text-pixel-accent" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
          </svg>
          S'abonner au flux RSS
        </a>
      </div>

      {posts.length === 0 ? (
        <div class="text-center py-16 reveal">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-pixel-gray-light/50 flex items-center justify-center">
            <svg class="w-8 h-8 text-pixel-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <p class="text-pixel-text-muted text-lg">Aucun article pour le moment.</p>
          <p class="text-pixel-text-muted/60 text-sm mt-2">Revenez bientôt pour découvrir nos premiers articles !</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children">
          {posts.map((post, index) => (
            <a
              href={`/blog/${post.id}`}
              class="group bg-pixel-gray border border-pixel-gray-light rounded-2xl hover:border-pixel-accent/50 transition-all hover:scale-[1.02] overflow-hidden"
            >
              {post.data.image ? (
                <div class="aspect-video overflow-hidden">
                  <Image
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    width={400}
                    height={225}
                    loading={index < 3 ? "eager" : "lazy"}
                  />
                </div>
              ) : (
                <div class="aspect-video bg-pixel-gray-light flex items-center justify-center">
                  <svg class="w-12 h-12 text-pixel-text-muted/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                </div>
              )}

              <div class="p-5">
                <div class="flex items-center justify-between mb-3">
                  <time datetime={post.data.pubDate.toISOString()} class="text-pixel-text-muted text-xs">
                    {formatDate(post.data.pubDate)}
                  </time>
                  {post.data.tags.length > 0 && (
                    <div class="flex gap-1">
                      {post.data.tags.slice(0, 2).map((tag) => (
                        <span class="px-2 py-0.5 text-xs bg-pixel-gray-light rounded-md text-pixel-text-muted">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>

                <h2 class="font-semibold text-lg mb-2 group-hover:text-pixel-accent-light transition-colors line-clamp-2">
                  {post.data.title}
                </h2>
                <p class="text-pixel-text-muted text-sm mb-4 line-clamp-2">
                  {post.data.description}
                </p>

                <div class="inline-flex items-center gap-2 text-sm text-pixel-accent group-hover:text-pixel-accent-light transition-colors">
                  <span>Lire l'article</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>
