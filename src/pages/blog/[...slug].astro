---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = post.data.image
  ? new URL(post.data.image.src, Astro.site).toString()
  : undefined;

function formatDate(date: Date) {
  return date.toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

const shareTitle = encodeURIComponent(post.data.title);
const shareUrl = encodeURIComponent(canonicalURL.toString());
const shareTwitter = `https://twitter.com/intent/tweet?text=${shareTitle}&url=${shareUrl}`;
const shareLinkedIn = `https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`;
const shareFacebook = `https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "author": {
    "@type": "Person",
    "name": post.data.author
  },
  "datePublished": post.data.pubDate.toISOString(),
  "publisher": {
    "@type": "Organization",
    "name": "COLLECTIF PIXEL",
    "url": "https://collectif-pixel.fr"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.toString()
  },
  ...(ogImageURL && { "image": ogImageURL })
};
---

<Layout
  title={`${post.data.title} - COLLECTIF PIXEL`}
  description={post.data.description}
  image={ogImageURL}
  type="article"
  publishedTime={post.data.pubDate.toISOString()}
  author={post.data.author}
  tags={post.data.tags}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <Header />

  <main class="pt-24 pb-16 relative" role="main">
    <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
      <div class="absolute top-32 -right-32 w-96 h-96 bg-pixel-accent/5 rounded-full blur-3xl"></div>
    </div>

    <article class="max-w-3xl mx-auto px-6 relative z-10" itemscope itemtype="https://schema.org/BlogPosting">
      <meta itemprop="headline" content={post.data.title} />
      <meta itemprop="description" content={post.data.description} />
      <meta itemprop="datePublished" content={post.data.pubDate.toISOString()} />
      <meta itemprop="author" content={post.data.author} />

      <div class="mb-12 reveal">
        <a href="/blog" class="inline-flex items-center gap-2 text-pixel-text-muted hover:text-pixel-accent transition-colors text-sm mb-8" aria-label="Retour Ã  la liste des articles">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour au blog
        </a>

        <div class="flex flex-wrap items-center gap-3 mb-6">
          <div class="flex items-center gap-2 px-3 py-1.5 bg-pixel-gray border border-pixel-gray-light rounded-lg">
            <svg class="w-4 h-4 text-pixel-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.pubDate.toISOString()} class="text-pixel-text-muted text-sm" itemprop="datePublished">
              {formatDate(post.data.pubDate)}
            </time>
          </div>
          <div class="flex items-center gap-2 px-3 py-1.5 bg-pixel-gray border border-pixel-gray-light rounded-lg">
            <svg class="w-4 h-4 text-pixel-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="text-pixel-text-muted text-sm" itemprop="author">{post.data.author}</span>
          </div>
        </div>

        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6" itemprop="name">{post.data.title}</h1>

        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2" role="list" aria-label="Tags de l'article">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1.5 text-sm font-medium bg-pixel-gray border border-pixel-gray-light rounded-lg text-pixel-text-muted" role="listitem">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      {post.data.image && (
        <div class="mb-12 reveal-scale">
          <Image
            src={post.data.image}
            alt={post.data.title}
            class="w-full rounded-2xl border border-pixel-gray-light"
            width={800}
            height={450}
            loading="eager"
            itemprop="image"
          />
        </div>
      )}

      <div class="prose reveal" itemprop="articleBody">
        <Content />
      </div>

      <div class="mt-12 pt-8 border-t border-pixel-gray-light reveal">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
          <div>
            <p class="text-pixel-text-muted text-sm mb-3">Partager cet article</p>
            <div class="flex items-center gap-2" role="group" aria-label="Boutons de partage">
              <a
                href={shareTwitter}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-10 h-10 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 hover:text-pixel-accent transition-all"
                aria-label="Partager sur X (Twitter)"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a
                href={shareLinkedIn}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-10 h-10 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 hover:text-[#0A66C2] transition-all"
                aria-label="Partager sur LinkedIn"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a
                href={shareFacebook}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-10 h-10 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 hover:text-[#1877F2] transition-all"
                aria-label="Partager sur Facebook"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <button
                id="copy-link-btn"
                class="inline-flex items-center justify-center w-10 h-10 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 hover:text-pixel-accent transition-all"
                aria-label="Copier le lien"
                data-url={canonicalURL.toString()}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
            </div>
          </div>

          <div class="flex flex-wrap gap-2">
            <a
              href="/rss.xml"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 transition-all text-sm"
              aria-label="S'abonner au flux RSS"
            >
              <svg class="w-4 h-4 text-pixel-accent" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
              </svg>
              RSS
            </a>
            <a
              href="/blog"
              class="inline-flex items-center gap-2 px-4 py-2 bg-pixel-gray border border-pixel-gray-light rounded-lg hover:border-pixel-accent/50 transition-all text-sm"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Tous les articles
            </a>
          </div>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<script>
  const copyBtn = document.getElementById('copy-link-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const url = copyBtn.getAttribute('data-url');
      if (url) {
        try {
          await navigator.clipboard.writeText(url);
          const originalHTML = copyBtn.innerHTML;
          copyBtn.innerHTML = `<svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
          setTimeout(() => {
            copyBtn.innerHTML = originalHTML;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  }
</script>

<style is:global>
  .prose {
    color: var(--color-pixel-text);
    font-size: 1.125rem;
    line-height: 1.8;
  }
  .prose > * + * {
    margin-top: 1.5rem;
  }
  .prose h2 {
    color: var(--color-pixel-text);
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-pixel-gray-light);
  }
  .prose h3 {
    color: var(--color-pixel-text);
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-bottom: 1.25rem;
  }
  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.75rem;
  }
  .prose ul {
    list-style-type: disc;
  }
  .prose ol {
    list-style-type: decimal;
  }
  .prose li {
    margin-bottom: 0.5rem;
    padding-left: 0.25rem;
  }
  .prose li::marker {
    color: var(--color-pixel-accent);
  }
  .prose strong {
    color: var(--color-pixel-text);
    font-weight: 600;
  }
  .prose a {
    color: var(--color-pixel-accent-light);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  .prose a:hover {
    color: var(--color-pixel-accent);
  }
  .prose a:focus-visible {
    outline: 2px solid var(--color-pixel-accent);
    outline-offset: 2px;
    border-radius: 2px;
  }
  .prose code:not(pre code) {
    background: var(--color-pixel-gray);
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
    font-family: ui-monospace, monospace;
  }
  .prose .expressive-code,
  .prose pre {
    margin: 1.5rem 0;
  }
  .prose lite-youtube {
    margin: 1.5rem 0;
    border-radius: 0.75rem;
    overflow: hidden;
  }
  .prose blockquote {
    border-left: 4px solid var(--color-pixel-accent);
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    background: var(--color-pixel-gray);
    border-radius: 0 0.5rem 0.5rem 0;
    color: var(--color-pixel-text-muted);
    font-style: italic;
  }
  .prose blockquote p {
    margin: 0;
  }
  .prose hr {
    border: none;
    border-top: 1px solid var(--color-pixel-gray-light);
    margin: 2.5rem 0;
  }
  .prose img {
    border-radius: 0.75rem;
    margin: 1.5rem 0;
  }
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }
  .prose thead {
    border-bottom: 2px solid var(--color-pixel-gray-light);
  }
  .prose th {
    text-align: left;
    padding: 0.75rem 1rem;
    font-weight: 600;
    color: var(--color-pixel-text);
  }
  .prose td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-pixel-gray-light);
    color: var(--color-pixel-text-muted);
  }
  .prose tbody tr:hover {
    background: var(--color-pixel-gray);
  }
  a:focus-visible,
  button:focus-visible {
    outline: 2px solid var(--color-pixel-accent);
    outline-offset: 2px;
  }
</style>
