---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

function formatDate(date: Date) {
  return date.toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<section id="blog" class="py-24 relative">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/3 -left-32 w-64 h-64 bg-pixel-accent/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 reveal">
      <span class="text-pixel-accent font-semibold text-sm tracking-wider uppercase">Actualités</span>
      <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6">Blog</h2>
      <p class="text-pixel-text-muted text-lg max-w-2xl mx-auto">
        Réflexions sur la tech, coulisses de nos projets et actualités du collectif.
      </p>
    </div>

    {posts.length > 0 ? (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12 stagger-children">
        {posts.map((post) => (
          <a
            href={`/blog/${post.id}/`}
            class="group bg-pixel-gray border border-pixel-gray-light rounded-2xl hover:border-pixel-accent/50 transition-all hover:scale-[1.02] overflow-hidden"
          >
            {post.data.image ? (
              <div class="aspect-video overflow-hidden">
                <Image
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  width={400}
                  height={225}
                />
              </div>
            ) : (
              <div class="aspect-video bg-pixel-gray-light flex items-center justify-center">
                <svg class="w-12 h-12 text-pixel-text-muted/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
            )}

            <div class="p-5">
              <div class="flex items-center gap-2 mb-3">
                <time datetime={post.data.pubDate.toISOString()} class="text-pixel-text-muted text-sm">
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags.length > 0 && (
                  <span class="px-2 py-0.5 text-xs bg-pixel-gray-light rounded-full text-pixel-text-muted">
                    {post.data.tags[0]}
                  </span>
                )}
              </div>

              <h3 class="font-semibold text-lg mb-2 group-hover:text-pixel-accent-light transition-colors line-clamp-2">
                {post.data.title}
              </h3>
              <p class="text-pixel-text-muted text-sm line-clamp-2">
                {post.data.description}
              </p>

              <div class="mt-4 inline-flex items-center gap-2 text-sm text-pixel-accent group-hover:text-pixel-accent-light transition-colors">
                <span>Lire l'article</span>
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 reveal">
        <p class="text-pixel-text-muted">Aucun article pour le moment. Revenez bientôt !</p>
      </div>
    )}

    <div class="flex flex-wrap justify-center gap-4 reveal">
      <a
        href="/blog/"
        class="inline-flex items-center gap-3 px-6 py-3 bg-pixel-accent hover:bg-pixel-accent-light text-white font-medium rounded-xl transition-all"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <span>Tous les articles</span>
      </a>
      <a
        href="/rss.xml"
        target="_blank"
        class="inline-flex items-center gap-3 px-6 py-3 bg-pixel-gray border border-pixel-gray-light rounded-xl hover:border-pixel-accent/50 transition-all"
      >
        <svg class="w-5 h-5 text-pixel-accent" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
        </svg>
        <span class="font-medium">Flux RSS</span>
      </a>
    </div>
  </div>
</section>
